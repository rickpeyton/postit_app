<h4>Login</h4>
<div class='well'>
  <%= form_tag '/login', method: 'post' do %>
    <div class='control-group'>
      <%= label_tag :username, 'Username' %>
      <%= text_field_tag :username %>
    </div>
    <div class='control-group'>
      <%= label_tag :password, 'Password' %>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag 'Login', class: 'btn btn-primary' %>
  <% end %>
</div>
