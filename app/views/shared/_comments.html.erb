<% post_title ||= false %>
<div class='row'> 
  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post,comment, vote: true),
            method: :post do %>
        <i class="icon-arrow-up"></i>
      <% end %>
    <% end %>
    <div><%= pluralize(comment.comment_vote_total, 'vote') %></div>
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post,comment, vote: false),
            method: :post do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
  </div>
  <div class='well span8'>
    <em>"<%= comment.body %>"</em>
    <% if post_title %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <p>
    <span class='quiet'>by</span> <%= link_to comment.creator.username,
                                        user_path(comment.creator) %>
      <small>at <%= format_datetime(comment.created_at) %></small>
    </p>
  </div>
</div>
