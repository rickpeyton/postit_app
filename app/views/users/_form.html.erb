<%= render 'shared/form_error', error_object: @user %>
<div class='well'>
  <%= form_for @user do |f| %>
    <div class='control-group'>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <%= f.submit @user.new_record? ? 'Create Account' : 'Update Profile', class: 'btn btn-primary' %>
  <% end %>
</div>
