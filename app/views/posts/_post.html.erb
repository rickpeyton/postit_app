<div class='row'>
  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true),
        method: :post,
        remote: true do %>
        <i class="icon-arrow-up"></i>
      <% end %>
    <% end %>
    <div id='<%= "post_#{post.id}_votes" %>'><%= "#{pluralize(post.post_vote_count, 'vote')}" %></div>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false),
        method: :post,
        remote: true do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
  </div>
  <div class='span8 well'>
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
    <span class='quiet'>posted by</span> <%= link_to post.creator.username,
                                           user_path(post.creator) %>
      <small>at <%= format_datetime(post.created_at) %></small>
    </p>
    <p>
      <%= link_to "#{pluralize(post.comments.size, 'comment')}",
        post_path(post) %>
    </p>
  </div>
</div>
