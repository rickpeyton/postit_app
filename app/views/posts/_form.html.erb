<% if @post.errors.any? %>
  <div class='alert alert-error'>
    <h5>There were some errors:</h5>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @post do |f| %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.submit 'Submit Post', class: 'btn btn-primary' %>
<% end %>
